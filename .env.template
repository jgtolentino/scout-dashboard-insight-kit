# ▶️ Front-end endpoint
VITE_API_URL=http://localhost:3001   # your backend API URL

# ▶️ Mocks & Auth toggles
VITE_USE_MOCKS=true     # set to false in prod
VITE_DISABLE_AUTH=true  # set to false in prod

# ▶️ Azure OpenAI
VITE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
VITE_OPENAI_KEY=your_openai_key_here

# ▶️ Azure Storage
VITE_STORAGE_ACCOUNT=your_storage_account_name
VITE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your_storage_account;AccountKey=your_key;EndpointSuffix=core.windows.net"
VITE_USE_MANAGED_IDENTITY=false  # set to true in production with Managed Identity

# ▶️ Azure SQL
VITE_SQL_SERVER=your_sql_server.database.windows.net
VITE_SQL_DATABASE=your_database_name
VITE_SQL_USER=your_db_user
VITE_SQL_PASSWORD=your_db_password

# ▶️ Mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Legacy Database Configuration (choose one method if not using Azure SQL)
# Method 1: Connection String
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/scout_analytics
# OR for MySQL:
# VITE_DATABASE_URL=mysql://user:password@localhost:3306/scout_analytics

# Method 2: Individual Parameters
VITE_DB_TYPE=postgres    # or 'mysql'
VITE_DB_HOST=localhost
VITE_DB_PORT=5432        # 5432 for PostgreSQL, 3306 for MySQL
VITE_DB_USER=your_db_user
VITE_DB_PASSWORD=your_db_password
VITE_DB_NAME=scout_analytics
