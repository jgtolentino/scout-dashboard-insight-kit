# Scout Analytics Dashboard v3.0 - Local Development Environment
# Copy this file to .env.local and configure as needed

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=scout-analytics-dashboard
VITE_APP_VERSION=3.0.0

# API Configuration
VITE_API_BASE_URL=/api/v1
VITE_MEDALLION_API_URL=/api/medallion
VITE_USE_MOCKS=false

# Feature Flags
VITE_REAL_TIME_STREAMING=false
VITE_ADVANCED_ANALYTICS=true
VITE_ML_PREDICTIONS=false

# Azure Services (Auto-detected via DefaultAzureCredential when using az login)
# These are OPTIONAL for local development if you use `az login`
# AZURE_TENANT_ID=auto-detected-via-cli
# AZURE_CLIENT_ID=auto-detected-via-cli
# AZURE_SUBSCRIPTION_ID=auto-detected-via-cli

# Azure OpenAI (Required - provide your endpoint and key)
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Databricks (TBWA Project Scout)
